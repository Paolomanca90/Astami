@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Password dimenticata";
}

<div class="min-h-screen flex items-center justify-center bg-base-200 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <!-- Header -->
        <div class="text-center">
            <div class="text-4xl font-bold mb-4">
                <span class="text-primary">a</span><span class="text-secondary">stami</span>
            </div>
            <h2 class="text-2xl font-bold text-base-content">
                Password dimenticata?
            </h2>
            <p class="mt-2 text-sm text-base-content/70">
                Nessun problema! Inserisci la tua email e ti invieremo un link per reimpostare la password.
            </p>
        </div>

        <!-- Forgot Password Form -->
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-error mb-4" role="alert" style="@(ViewData.ModelState.IsValid ? "display: none;" : "")"></div>
                    
                    <!-- Email Field -->
                    <div class="form-control mb-6">
                        <label asp-for="Input.Email" class="label">
                            <span class="label-text font-medium">Indirizzo Email</span>
                        </label>
                        <div class="relative">
                            <input asp-for="Input.Email" class="input input-bordered w-full pl-10 @(ViewData.ModelState.ContainsKey("Input.Email") ? "" : "input-error")" 
                                   autocomplete="username" aria-required="true" placeholder="nome@esempio.com" />
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope text-base-content/50"></i>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="label-text-alt text-error mt-1"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary w-full mb-4">
                        <i class="fas fa-paper-plane mr-2"></i>
                        Invia Link di Reset
                    </button>

                    <!-- Back to Login -->
                    <div class="text-center">
                        <a asp-page="./Login" class="link link-secondary text-sm">
                            <i class="fas fa-arrow-left mr-1"></i>
                            Torna al Login
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Info Card -->
        <div class="card bg-info/10 border border-info/20">
            <div class="card-body py-4">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <i class="fas fa-info-circle text-info text-lg mt-1"></i>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-info mb-1">Cosa succede dopo?</h3>
                        <div class="text-xs text-base-content/70 space-y-1">
                            <p>• Riceverai un'email con un link sicuro</p>
                            <p>• Il link sarà valido per 24 ore</p>
                            <p>• Potrai impostare una nuova password</p>
                            <p>• Non hai ricevuto l'email? Controlla la cartella spam</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Help Text -->
        <div class="text-center text-sm text-base-content/70">
            <p>
                Problemi persistenti? 
                <a href="#" class="link link-primary">Contatta il supporto</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<!DOCTYPE html>
<html lang="en" class="astami">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Astami</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- DaisyUI 5 + Tailwind CSS v4 -->
    <link href="~/css/output.css" rel="stylesheet" type="text/css" />

    <!-- Font Awesome per le icone -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar gradient-bg shadow-lg sticky top-0 z-50 text-white">
            <div class="navbar-start">
                <div class="dropdown">
                    <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16"></path>
                        </svg>
                    </div>
                    <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow-lg">
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="font-medium">Chi Siamo</a></li>
                        <li><a href="#" class="font-medium">Pricing</a></li>
                    </ul>
                </div>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-astami text-2xl">
                    <img src="/img/logo_astami.png" class="w-[8em]" alt="logo" />
                </a>
            </div>

            <div class="navbar-center hidden lg:flex">
                <!-- Barra di ricerca -->
                <div class="form-control">
                    <div class="input-group">
                        <input type="text" placeholder="Cerca agenzie o zone..." class="input input-bordered w-80 text-black dark:text-white" />
                        <button class="btn btn-square btn-astami-orange shadow-astami-dark-orange">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="navbar-end">
                <div class="hidden lg:flex">
                    <ul class="menu menu-horizontal px-1">
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="font-medium hover:text-astami-orange">Chi Siamo</a></li>
                        <li><a asp-area="" asp-controller="Pricing" asp-action="Index" class="font-medium hover:text-astami-orange">Pricing</a></li>
                    </ul>
                </div>

                <!-- Theme Toggle -->
                <label class="btn btn-ghost btn-circle swap swap-rotate mr-2 hover:bg-astami-dark-orange hover:text-white hover:border-astami-dark-orange">
                    <input type="checkbox" class="theme-controller" value="dark" />
                    <i class="fas fa-sun swap-off text-lg"></i>
                    <i class="fas fa-moon swap-on text-lg"></i>
                </label>

                <!-- Auth Section -->
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>

    <footer class="gradient-bg text-white relative overflow-hidden">
        <!-- Pattern decorativo -->
        <div class="absolute inset-0 opacity-5">
            <div class="hero-pattern absolute inset-0"></div>
        </div>

        <!-- Contenuto principale -->
        <div class="container mx-auto px-4 py-16 relative z-10">
            <!-- Sezione principale -->
            <div class="grid grid-cols-1 lg:grid-cols-4 gap-12 mb-12">

                <!-- Logo e Descrizione -->
                <div class="lg:col-span-2">
                    <div class="mb-6">
                        <img src="/img/logo_astami.png" width="250" alt="ASTAMI Logo"
                             class="mb-4 transition-transform duration-300 hover:scale-105 brightness-110 hover:brightness-125" />
                    </div>
                    <p class="text-lg text-white/90 mb-6 leading-relaxed max-w-md">
                        Il nuovo modo di proporre e scegliere immobili in totale trasparenza attraverso aste digitali innovative.
                    </p>

                    <!-- Social Media -->
                    <div class="flex gap-4">
                        <a href="#" class="btn btn-circle bg-white/10 border-white/20 text-white hover:bg-astami-orange hover:border-astami-orange hover:-translate-y-1 hover:shadow-lg transition-all duration-300 backdrop-blur-sm">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="btn btn-circle bg-white/10 border-white/20 text-white hover:bg-astami-orange hover:border-astami-orange hover:-translate-y-1 hover:shadow-lg transition-all duration-300 backdrop-blur-sm">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="#" class="btn btn-circle bg-white/10 border-white/20 text-white hover:bg-astami-orange hover:border-astami-orange hover:-translate-y-1 hover:shadow-lg transition-all duration-300 backdrop-blur-sm">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="#" class="btn btn-circle bg-white/10 border-white/20 text-white hover:bg-astami-orange hover:border-astami-orange hover:-translate-y-1 hover:shadow-lg transition-all duration-300 backdrop-blur-sm">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </div>
                </div>

                <!-- Link Utili -->
                <div>
                    <h3 class="text-xl font-bold mb-6 text-white">Link Utili</h3>
                    <ul class="space-y-3">
                        <li>
                            <a href="#" class="text-white/80 hover:text-astami-orange hover:translate-x-2 transition-all duration-300 relative inline-block group">
                                <span class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-2 h-2 bg-astami-orange rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                                Chi Siamo
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-white/80 hover:text-astami-orange hover:translate-x-2 transition-all duration-300 relative inline-block group">
                                <span class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-2 h-2 bg-astami-orange rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                                Come Funziona
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-white/80 hover:text-astami-orange hover:translate-x-2 transition-all duration-300 relative inline-block group">
                                <span class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-2 h-2 bg-astami-orange rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                                Prezzi
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-white/80 hover:text-astami-orange hover:translate-x-2 transition-all duration-300 relative inline-block group">
                                <span class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-2 h-2 bg-astami-orange rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                                FAQ
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-white/80 hover:text-astami-orange hover:translate-x-2 transition-all duration-300 relative inline-block group">
                                <span class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-2 h-2 bg-astami-orange rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                                Blog
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Supporto -->
                <div>
                    <h3 class="text-xl font-bold mb-6 text-white">Supporto</h3>
                    <ul class="space-y-3">
                        <li>
                            <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white/80 hover:text-astami-orange hover:translate-x-2 transition-all duration-300 relative inline-block group">
                                <span class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-2 h-2 bg-astami-orange rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                                Privacy Policy
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-white/80 hover:text-astami-orange hover:translate-x-2 transition-all duration-300 relative inline-block group">
                                <span class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-2 h-2 bg-astami-orange rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                                Termini di Servizio
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-white/80 hover:text-astami-orange hover:translate-x-2 transition-all duration-300 relative inline-block group">
                                <span class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-2 h-2 bg-astami-orange rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                                Contatti
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-white/80 hover:text-astami-orange hover:translate-x-2 transition-all duration-300 relative inline-block group">
                                <span class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-2 h-2 bg-astami-orange rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                                Centro Assistenza
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-white/80 hover:text-astami-orange hover:translate-x-2 transition-all duration-300 relative inline-block group">
                                <span class="absolute -left-4 top-1/2 transform -translate-y-1/2 w-2 h-2 bg-astami-orange rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
                                Segnala un Problema
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Sezione Newsletter -->
            <div class="border-t border-white/20 pt-12 mb-8">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
                    <div>
                        <h3 class="text-2xl font-bold mb-2 text-white flex items-center">
                            <i class="fas fa-envelope mr-3 text-astami-orange"></i>
                            Resta aggiornato
                        </h3>
                        <p class="text-white/80">Ricevi le ultime novità e offerte esclusive direttamente nella tua email.</p>
                    </div>
                    <div class="flex gap-3">
                        <input type="email" placeholder="La tua email"
                               class="input input-bordered flex-1 bg-white/10 border-white/30 text-white placeholder-white/60 focus:border-astami-orange focus:bg-white/15 focus:-translate-y-1 transition-all duration-300 backdrop-blur-sm" />
                        <button class="btn btn-astami-orange px-6 hover:scale-105 transition-transform duration-300 btn-animate shadow-astami-dark-orange">
                            <i class="fas fa-paper-plane mr-2"></i>
                            Iscriviti
                        </button>
                    </div>
                </div>
            </div>

            <!-- Copyright -->
            <div class="border-t border-white/20 pt-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-center text-center md:text-left">
                    <div class="text-white/70 text-sm">
                        © @DateTime.Now.Year ASTAMI. Tutti i diritti riservati.
                    </div>
                    <div class="flex justify-center gap-6 text-sm text-white/70">
                        <span class="flex items-center hover:text-white transition-colors duration-300">
                            <i class="fas fa-shield-alt mr-1 text-astami-orange"></i> Sicuro
                        </span>
                        <span class="flex items-center hover:text-white transition-colors duration-300">
                            <i class="fas fa-lock mr-1 text-astami-orange"></i> Crittografato
                        </span>
                        <span class="flex items-center hover:text-white transition-colors duration-300">
                            <i class="fas fa-certificate mr-1 text-astami-orange"></i> Verificato
                        </span>
                    </div>
                    <div class="text-white/70 text-center md:text-right text-sm">
                        Made with <i class="fas fa-heart text-red-400 animate-pulse"></i> in Italy
                    </div>
                </div>
            </div>
        </div>

        <!-- Barra decorativa animata -->
        <div class="h-1 bg-gradient-to-r from-primary via-secondary to-primary bg-size-200 animate-pulse"></div>
    </footer>

    <script>
        // Theme toggle functionality
        const themeController = document.querySelector('.theme-controller');
        const htmlElement = document.documentElement;

        // Load saved theme
        const savedTheme = localStorage.getItem('theme') || 'astami';
        htmlElement.setAttribute('data-theme', savedTheme);
        if (savedTheme === 'dark') {
            themeController.checked = true;
        }

        themeController.addEventListener('change', function() {
            if (this.checked) {
                htmlElement.setAttribute('data-theme', 'dark');
                localStorage.setItem('theme', 'dark');
            } else {
                htmlElement.setAttribute('data-theme', 'astami');
                localStorage.setItem('theme', 'astami');
            }
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@model Astami.Controllers.AgencyRegistrationViewModel

@{
    ViewData["Title"] = "Registra la tua Agenzia";
}

<div class="min-h-screen bg-base-200 py-12">
    <div class="container mx-auto px-4">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold mb-4">
                Registra la tua <span class="text-astami-orange">Agenzia</span>
            </h1>
            <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
                Completa la registrazione della tua agenzia immobiliare e inizia a digitalizzare il tuo business con ASTAMI.
            </p>
        </div>

        <div class="max-w-6xl mx-auto">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

                <!-- Form Registrazione -->
                <div class="lg:col-span-2">
                    <div class="card bg-base-100 shadow-xl">
                        <div class="card-body p-8">
                            <h2 class="card-title text-2xl mb-6">
                                <i class="fas fa-building text-astami-orange mr-2"></i>
                                Informazioni Agenzia
                            </h2>

                            <form asp-action="RegisterAgency" method="post" id="agencyForm">
                                <div asp-validation-summary="ModelOnly" class="alert alert-error mb-6" role="alert"></div>

                                <!-- Piano selezionato (hidden) -->
                                <input asp-for="AbbonamentoId" type="hidden" />

                                <!-- Dati Agenzia -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                    <div class="md:col-span-2">
                                        <label asp-for="RagioneSociale" class="label">
                                            <span class="label-text font-medium">Ragione Sociale *</span>
                                        </label>
                                        <input asp-for="RagioneSociale" class="input input-bordered w-full"
                                               placeholder="Nome della tua agenzia" required />
                                        <span asp-validation-for="RagioneSociale" class="label-text-alt text-error"></span>
                                    </div>

                                    <div class="md:col-span-2">
                                        <label asp-for="Descrizione" class="label">
                                            <span class="label-text font-medium">Descrizione</span>
                                        </label>
                                        <textarea asp-for="Descrizione" class="textarea textarea-bordered w-full"
                                                  rows="3" placeholder="Descrivi brevemente la tua agenzia..."></textarea>
                                        <span asp-validation-for="Descrizione" class="label-text-alt text-error"></span>
                                    </div>
                                </div>

                                <!-- Indirizzo -->
                                <h3 class="text-lg font-bold mb-4">
                                    <i class="fas fa-map-marker-alt text-astami-blue mr-2"></i>
                                    Indirizzo
                                </h3>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                    <div class="md:col-span-2">
                                        <label asp-for="Indirizzo" class="label">
                                            <span class="label-text font-medium">Indirizzo *</span>
                                        </label>
                                        <input asp-for="Indirizzo" class="input input-bordered w-full"
                                               placeholder="Via/Piazza e numero civico" required />
                                        <span asp-validation-for="Indirizzo" class="label-text-alt text-error"></span>
                                    </div>

                                    <div>
                                        <label asp-for="Città" class="label">
                                            <span class="label-text font-medium">Città *</span>
                                        </label>
                                        <input asp-for="Città" class="input input-bordered w-full"
                                               placeholder="Milano" required />
                                        <span asp-validation-for="Città" class="label-text-alt text-error"></span>
                                    </div>

                                    <div>
                                        <label asp-for="CAP" class="label">
                                            <span class="label-text font-medium">CAP *</span>
                                        </label>
                                        <input asp-for="CAP" class="input input-bordered w-full"
                                               placeholder="20100" pattern="[0-9]{5}" required />
                                        <span asp-validation-for="CAP" class="label-text-alt text-error"></span>
                                    </div>

                                    <div>
                                        <label asp-for="Provincia" class="label">
                                            <span class="label-text font-medium">Provincia *</span>
                                        </label>
                                        <input asp-for="Provincia" class="input input-bordered w-full"
                                               placeholder="MI" required />
                                        <span asp-validation-for="Provincia" class="label-text-alt text-error"></span>
                                    </div>

                                    <div>
                                        <label asp-for="Regione" class="label">
                                            <span class="label-text font-medium">Regione *</span>
                                        </label>
                                        <input asp-for="Regione" class="input input-bordered w-full"
                                               placeholder="Lombardia" required />
                                        <span asp-validation-for="Regione" class="label-text-alt text-error"></span>
                                    </div>
                                </div>

                                <!-- Contatti -->
                                <h3 class="text-lg font-bold mb-4">
                                    <i class="fas fa-phone text-astami-blue mr-2"></i>
                                    Contatti
                                </h3>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                    <div>
                                        <label asp-for="Telefono" class="label">
                                            <span class="label-text font-medium">Telefono</span>
                                        </label>
                                        <input asp-for="Telefono" type="tel" class="input input-bordered w-full"
                                               placeholder="+39 02 1234567" />
                                        <span asp-validation-for="Telefono" class="label-text-alt text-error"></span>
                                    </div>

                                    <div>
                                        <label asp-for="Email" class="label">
                                            <span class="label-text font-medium">Email Agenzia</span>
                                        </label>
                                        <input asp-for="Email" type="email" class="input input-bordered w-full"
                                               placeholder="info@tuaagenzia.com" />
                                        <span asp-validation-for="Email" class="label-text-alt text-error"></span>
                                    </div>

                                    <div class="md:col-span-2">
                                        <label asp-for="SitoWeb" class="label">
                                            <span class="label-text font-medium">Sito Web</span>
                                        </label>
                                        <input asp-for="SitoWeb" type="url" class="input input-bordered w-full"
                                               placeholder="https://www.tuaagenzia.com" />
                                        <span asp-validation-for="SitoWeb" class="label-text-alt text-error"></span>
                                    </div>
                                </div>

                                <!-- Dati Fiscali -->
                                <h3 class="text-lg font-bold mb-4">
                                    <i class="fas fa-file-invoice text-astami-blue mr-2"></i>
                                    Dati Fiscali
                                </h3>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                    <div>
                                        <label asp-for="PartitaIVA" class="label">
                                            <span class="label-text font-medium">Partita IVA</span>
                                        </label>
                                        <input asp-for="PartitaIVA" class="input input-bordered w-full"
                                               placeholder="12345678901" pattern="[0-9]{11}" />
                                        <span asp-validation-for="PartitaIVA" class="label-text-alt text-error"></span>
                                    </div>

                                    <div>
                                        <label asp-for="SDI" class="label">
                                            <span class="label-text font-medium">Codice SDI</span>
                                        </label>
                                        <input asp-for="SDI" class="input input-bordered w-full"
                                               placeholder="ABCDEFG" />
                                        <span asp-validation-for="SDI" class="label-text-alt text-error"></span>
                                    </div>
                                </div>

                                <!-- Visibilità -->
                                <h3 class="text-lg font-bold mb-4">
                                    <i class="fas fa-eye text-astami-blue mr-2"></i>
                                    Visibilità
                                </h3>
                                <div class="mb-6">
                                    <div class="form-control">
                                        <label class="label cursor-pointer justify-start gap-3">
                                            <input asp-for="IsPublic" type="checkbox" class="checkbox checkbox-astami-blue" />
                                            <span class="label-text">
                                                <strong>Profilo pubblico</strong><br>
                                                <small class="text-base-content/70">La tua agenzia sarà visibile nella ricerca pubblica</small>
                                            </span>
                                        </label>
                                    </div>

                                    <div id="pinSection" class="mt-4" style="display: none;">
                                        <label asp-for="PinAccesso" class="label">
                                            <span class="label-text font-medium">PIN di Accesso</span>
                                        </label>
                                        <input asp-for="PinAccesso" class="input input-bordered w-full max-w-xs"
                                               placeholder="Crea un PIN per l'accesso privato" />
                                        <span asp-validation-for="PinAccesso" class="label-text-alt text-error"></span>
                                        <div class="label">
                                            <span class="label-text-alt">I clienti dovranno inserire questo PIN per accedere al tuo profilo</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Termini e Condizioni -->
                                <div class="mb-6">
                                    <div class="form-control">
                                        <label class="label cursor-pointer justify-start gap-3">
                                            <input asp-for="AccettaTermini" type="checkbox" class="checkbox checkbox-astami-orange" required />
                                            <span class="label-text">
                                                Accetto i <a href="#" class="link link-astami-orange">Termini di Servizio</a> *
                                            </span>
                                        </label>
                                    </div>

                                    <div class="form-control">
                                        <label class="label cursor-pointer justify-start gap-3">
                                            <input asp-for="AccettaPrivacy" type="checkbox" class="checkbox checkbox-astami-orange" required />
                                            <span class="label-text">
                                                Accetto la <a href="#" class="link link-astami-orange">Privacy Policy</a> *
                                            </span>
                                        </label>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <button type="submit" class="btn btn-astami-orange btn-lg w-full btn-animate">
                                    <i class="fas fa-rocket mr-2"></i>
                                    Completa Registrazione
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Sidebar con Piano Selezionato -->
                <div class="lg:col-span-1">
                    <div class="card bg-base-100 shadow-xl sticky top-4">
                        <div class="card-body p-6">
                            <h3 class="card-title text-lg mb-4">
                                <i class="fas fa-crown text-astami-orange mr-2"></i>
                                Piano Selezionato
                            </h3>

                            @if (Model.PianoSelezionato != null)
                            {
                                <div id="selectedPlan" class="border border-astami-orange rounded-lg p-4 mb-4">
                                    <div class="text-center">
                                        <h4 class="text-xl font-bold text-astami-orange">@Model.PianoSelezionato.Nome</h4>
                                        <div class="text-3xl font-bold mt-2">€@Model.PianoSelezionato.Prezzo</div>
                                        <div class="text-base-content/70">/mese</div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div id="noSelectedPlan" class="text-center text-base-content/70 mb-4">
                                    <i class="fas fa-info-circle text-2xl mb-2"></i>
                                    <p>Nessun piano selezionato</p>
                                </div>
                            }

                            <div class="space-y-3">
                                <h5 class="font-bold">Scegli il tuo piano:</h5>
                                @foreach (var plan in Model.AvailablePlans)
                                {
                                    <div class="plan-option border rounded-lg p-3 cursor-pointer hover:border-astami-orange transition-colors @(Model.PianoSelezionato?.AbbonamentoId == plan.AbbonamentoId ? "border-astami-orange bg-astami-orange/10" : "border-base-300")"
                                         data-plan-id="@plan.AbbonamentoId" data-plan-name="@plan.Nome" data-plan-price="@plan.Prezzo">
                                        <div class="flex justify-between items-center">
                                            <div>
                                                <div class="font-bold">@plan.Nome</div>
                                                <div class="text-sm text-base-content/70">€@plan.Prezzo/mese</div>
                                            </div>
                                            <div class="radio-indicator">
                                                <i class="fas fa-circle @(Model.PianoSelezionato?.AbbonamentoId == plan.AbbonamentoId ? "text-astami-orange" : "text-base-300")"></i>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <div class="mt-6 p-4 bg-info/10 rounded-lg">
                                <div class="flex items-start">
                                    <i class="fas fa-gift text-info mr-2 mt-1"></i>
                                    <div class="text-sm">
                                        <strong>Prova gratuita di 14 giorni</strong><br>
                                        <span class="text-base-content/70">Inizia senza rischi. Potrai annullare in qualsiasi momento.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Toggle PIN section based on IsPublic checkbox
        const isPublicCheckbox = document.querySelector('input[name="IsPublic"]');
        const pinSection = document.getElementById('pinSection');

        function togglePinSection() {
            if (isPublicCheckbox.checked) {
                pinSection.style.display = 'none';
            } else {
                pinSection.style.display = 'block';
            }
        }

        isPublicCheckbox.addEventListener('change', togglePinSection);
        togglePinSection(); // Initial check

        // Plan selection
        const planOptions = document.querySelectorAll('.plan-option');
        const abbonamentoIdInput = document.querySelector('input[name="AbbonamentoId"]');
        const selectedPlanDiv = document.getElementById('selectedPlan');
        const noSelectedPlanDiv = document.getElementById('noSelectedPlan');

        planOptions.forEach(option => {
            option.addEventListener('click', function() {
                const planId = this.getAttribute('data-plan-id');
                const planName = this.getAttribute('data-plan-name');
                const planPrice = this.getAttribute('data-plan-price');

                // Update hidden input
                abbonamentoIdInput.value = planId;

                // Update visual selection
                planOptions.forEach(opt => {
                    opt.classList.remove('border-astami-orange', 'bg-astami-orange/10');
                    opt.classList.add('border-base-300');
                    opt.querySelector('.radio-indicator i').classList.remove('text-astami-orange');
                    opt.querySelector('.radio-indicator i').classList.add('text-base-300');
                });

                this.classList.remove('border-base-300');
                this.classList.add('border-astami-orange', 'bg-astami-orange/10');
                this.querySelector('.radio-indicator i').classList.remove('text-base-300');
                this.querySelector('.radio-indicator i').classList.add('text-astami-orange');

                // Update selected plan display
                if (selectedPlanDiv) {
                    selectedPlanDiv.innerHTML = `
                        <div class="text-center">
                            <h4 class="text-xl font-bold text-astami-orange">${planName}</h4>
                            <div class="text-3xl font-bold mt-2">€${planPrice}</div>
                            <div class="text-base-content/70">/mese</div>
                        </div>
                    `;
                    selectedPlanDiv.style.display = 'block';
                    if (noSelectedPlanDiv) noSelectedPlanDiv.style.display = 'none';
                }

                // AJAX call to save plan selection
                fetch('/Agency/SelectPlanForAgency', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ abbonamentoId: planId })
                })
                .then(response => response.json())
                .then(data => {
                    if (!data.success) {
                        console.error('Errore nella selezione del piano:', data.message);
                    }
                })
                .catch(error => {
                    console.error('Errore:', error);
                });
            });
        });
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
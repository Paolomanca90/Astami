@{
    ViewData["Title"] = "Il nuovo modo di proporre e scegliere immobili";
}

<!-- Hero Section -->
<div class="hero min-h-screen gradient-bg hero-pattern">
    <div class="hero-content text-center text-white">
        <div class="max-w-4xl">
            <h1 class="text-5xl md:text-7xl font-bold mb-6">
                Compra o vendi il tuo<br>
                <span class="text-gradient">immobile con Astami!</span>
            </h1>
            <p class="text-xl md:text-2xl mb-8 opacity-90">
                Il nuovo modo di proporre e scegliere immobili in totale trasparenza.
            </p>

            <!-- Search Bar Hero -->
            <div class="card bg-white/10 backdrop-blur-md border border-white/20 shadow-2xl p-6 mb-8">
                <div class="flex flex-col md:flex-row gap-4">
                    <div class="form-control flex-1">
                        <input type="text" placeholder="Zona o città" class="input input-bordered input-lg bg-white text-black" />
                    </div>
                    <div class="form-control flex-1">
                        <input type="text" placeholder="Budget max" class="input input-bordered input-lg bg-white text-black" />
                    </div>
                    <button class="btn btn-primary btn-lg px-8">
                        <i class="fas fa-search mr-2"></i>
                        CERCA
                    </button>
                </div>
            </div>

            <!-- CTA Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button class="btn btn-primary btn-lg px-8">
                    <i class="fas fa-home mr-2"></i>
                    Vendi
                </button>
                <button class="btn btn-secondary btn-lg px-8">
                    <i class="fas fa-chart-line mr-2"></i>
                    Valuta
                </button>
            </div>
        </div>
    </div>
</div>

